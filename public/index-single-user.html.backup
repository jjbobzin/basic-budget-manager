            document.getElementById('billModalTitle').textContent = 'Edit Bill';
            document.getElementById('billId').value = bill.id;
            document.getElementById('billName').value = bill.name;
            document.getElementById('billAmount').value = bill.base_amount;
            document.getElementById('billDueDay').value = bill.due_day;
            document.getElementById('billFrequency').value = bill.frequency;
            document.getElementById('billNotes').value = bill.notes || '';
            document.getElementById('billModal').classList.add('active');
        }

        async function saveBill(e) {
            e.preventDefault();
            
            const id = document.getElementById('billId').value;
            const data = {
                name: document.getElementById('billName').value,
                base_amount: parseFloat(document.getElementById('billAmount').value),
                due_day: parseInt(document.getElementById('billDueDay').value),
                frequency: document.getElementById('billFrequency').value,
                notes: document.getElementById('billNotes').value
            };

            try {
                const url = id ? `/api/bills/${id}` : '/api/bills';
                const method = id ? 'PUT' : 'POST';

                await fetch(url, {
                    method,
                    credentials: 'include',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                closeBillModal();
                await loadAppData();
            } catch (error) {
                console.error('Save bill error:', error);
                alert('Failed to save bill');
            }
        }

        async function deleteBill(id) {
            if (!confirm('Are you sure you want to delete this bill?')) return;

            try {
                await fetch(`/api/bills/${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                await loadAppData();
            } catch (error) {
                console.error('Delete bill error:', error);
                alert('Failed to delete bill');
            }
        }

