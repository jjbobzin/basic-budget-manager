    <script>
        // Global state
        let currentStep = 1;
        let setupBills = [];
        let appData = {
            settings: null,
            bills: [],
            overrides: [],
            cleared: []
        };

        // ========== INITIALIZATION ========== 
        async function init() {
            try {
                // Check if setup is needed
                const setupStatus = await fetch('/api/setup/status').then(r => r.json());
                
                if (setupStatus.needsSetup) {
                    showSetupWizard();
                    return;
                }

                // Check if authenticated
                const authStatus = await fetch('/api/auth/status', {
                    credentials: 'include'
                }).then(r => r.json());

                if (authStatus.authenticated) {
                    showMainApp(authStatus.username);
                } else {
                    showLoginScreen();
                }
            } catch (error) {
                console.error('Initialization error:', error);
                showError('Failed to initialize app');
            }
        }

        function showLoginScreen() {
            hideAll();
            document.getElementById('loginScreen').classList.remove('hidden');
        }

        function showSetupWizard() {
            hideAll();
            document.getElementById('setupWizard').classList.remove('hidden');
        }

        function showMainApp(username) {
            hideAll();
            document.getElementById('mainApp').classList.remove('hidden');
            document.getElementById('currentUsername').textContent = username;
            loadAppData();
        }

        function hideAll() {
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('setupWizard').classList.add('hidden');
            document.getElementById('mainApp').classList.add('hidden');
        }

        // ========== LOGIN ========== 
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const username = document.getElementById('loginUsername').value;
            const password = document.getElementById('loginPassword').value;

            try {
                const response = await fetch('/api/auth/login', {
                    method: 'POST',
                    credentials: 'include',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (response.ok) {
                    showMainApp(data.username);
                } else {
                    showError(data.error || 'Login failed', 'loginError');
                }
            } catch (error) {
                showError('Network error. Please try again.', 'loginError');
            }
        });

        async function logout() {
            try {
                await fetch('/api/auth/logout', {
                    method: 'POST',
                    credentials: 'include'
                });
                showLoginScreen();
            } catch (error) {
                console.error('Logout error:', error);
            }
        }

        // ========== SETUP WIZARD ========== 
        function nextWizardStep() {
            if (!validateWizardStep(currentStep)) return;

            currentStep++;
            updateWizardUI();
        }

        function prevWizardStep() {
            currentStep--;
            updateWizardUI();
        }

        function validateWizardStep(step) {
            const errorEl = document.getElementById('setupError');
            errorEl.classList.add('hidden');

            if (step === 1) {
                const username = document.getElementById('setupUsername').value;
                const password = document.getElementById('setupPassword').value;
                const confirm = document.getElementById('setupPasswordConfirm').value;

                if (!username || !password) {
                    showError('Please fill in all fields', 'setupError');
                    return false;
                }

                if (password !== confirm) {
                    showError('Passwords do not match', 'setupError');
                    return false;
                }

                if (password.length < 4) {
                    showError('Password must be at least 4 characters', 'setupError');
                    return false;
                }
            }

            if (step === 2) {
                const income = document.getElementById('setupIncome').value;
                if (!income || income <= 0) {
                    showError('Please enter a valid income amount', 'setupError');
                    return false;
                }
            }

            if (step === 3) {
                const required = ['setupBillsAccount', 'setupBillsDeposit', 'setupPersonalAccount', 
                                 'setupPersonalDeposit', 'setupSavings1Account', 'setupSavings1Deposit', 
                                 'setupSavings2Account', 'setupStartingBalance'];
                
                for (const id of required) {
                    if (!document.getElementById(id).value) {
                        showError('Please fill in all account fields', 'setupError');
                        return false;
                    }
                }
            }

            return true;
        }

        function updateWizardUI() {
            // Hide all steps
            for (let i = 1; i <= 4; i++) {
                document.getElementById(`wizardStep${i}`).classList.add('hidden');
                const stepEl = document.querySelector(`.wizard-step[data-step="${i}"]`);
                stepEl.classList.remove('active', 'completed');
                if (i < currentStep) {
                    stepEl.classList.add('completed');
                }
            }

            // Show current step
            document.getElementById(`wizardStep${currentStep}`).classList.remove('hidden');
            document.querySelector(`.wizard-step[data-step="${currentStep}"]`).classList.add('active');

            // Update buttons
            document.getElementById('wizardPrevBtn').style.display = currentStep > 1 ? 'block' : 'none';
            document.getElementById('wizardNextBtn').style.display = currentStep < 4 ? 'block' : 'none';
            document.getElementById('wizardCompleteBtn').style.display = currentStep === 4 ? 'block' : 'none';
        }

        function addSetupBill() {
            const name = document.getElementById('setupBillName').value;
            const amount = parseFloat(document.getElementById('setupBillAmount').value);
            const day = parseInt(document.getElementById('setupBillDay').value);
            const frequency = document.getElementById('setupBillFrequency').value;

            if (!name || !amount || !day) {
                showError('Please fill in all bill fields', 'setupError');
                return;
            }

            setupBills.push({
                name,
                base_amount: amount,
                due_day: day,
                frequency,
                notes: ''
            });

            // Clear form
            document.getElementById('setupBillName').value = '';
            document.getElementById('setupBillAmount').value = '';
            document.getElementById('setupBillDay').value = '';

            renderSetupBills();
        }

        function removeSetupBill(index) {
            setupBills.splice(index, 1);
            renderSetupBills();
        }

        function renderSetupBills() {
            const listEl = document.getElementById('setupBillsList');
            if (setupBills.length === 0) {
                listEl.innerHTML = '<p style="color: #666; text-align: center; padding: 20px;">No bills added yet</p>';
                return;
            }

            listEl.innerHTML = setupBills.map((bill, index) => `
                <div class="bill-item">
                    <div class="bill-item-info">
                        <div class="bill-item-name">${bill.name}</div>
                        <div class="bill-item-details">$${bill.base_amount.toFixed(2)} ‚Ä¢ Due day ${bill.due_day} ‚Ä¢ ${bill.frequency}</div>
                    </div>
                    <button class="bill-item-remove" onclick="removeSetupBill(${index})">Remove</button>
                </div>
            `).join('');
        }

        async function completeSetup() {
            if (!validateWizardStep(4)) return;

            try {
                const setupData = {
                    username: document.getElementById('setupUsername').value,
                    password: document.getElementById('setupPassword').value,
                    settings: {
                        income_per_paycheck: parseFloat(document.getElementById('setupIncome').value),
                        payroll_day_1: parseInt(document.getElementById('setupPayday1').value),
                        payroll_day_2: parseInt(document.getElementById('setupPayday2').value),
                        bills_account_name: document.getElementById('setupBillsAccount').value,
                        bills_account_deposit: parseFloat(document.getElementById('setupBillsDeposit').value),
                        personal_account_name: document.getElementById('setupPersonalAccount').value,
                        personal_account_deposit: parseFloat(document.getElementById('setupPersonalDeposit').value),
                        savings_account_1_name: document.getElementById('setupSavings1Account').value,
                        savings_account_1_deposit: parseFloat(document.getElementById('setupSavings1Deposit').value),
                        savings_account_2_name: document.getElementById('setupSavings2Account').value,
                        starting_balance: parseFloat(document.getElementById('setupStartingBalance').value)
                    },
                    bills: setupBills
                };

                const response = await fetch('/api/setup/initialize', {
                    method: 'POST',
                    credentials: 'include',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(setupData)
                });

                const data = await response.json();

                if (response.ok) {
                    showSuccess('Setup completed! Loading your budget...', 'setupSuccess');
                    setTimeout(() => {
                        showMainApp(setupData.username);
                    }, 1500);
                } else {
                    showError(data.error || 'Setup failed', 'setupError');
                }
            } catch (error) {
                showError('Network error. Please try again.', 'setupError');
            }
        }

        // ========== MAIN APP ========== 
        async function loadAppData() {
            try {
                const [settings, bills, overrides, cleared] = await Promise.all([
                    fetch('/api/settings', { credentials: 'include' }).then(r => handleAuthResponse(r)),
                    fetch('/api/bills', { credentials: 'include' }).then(r => handleAuthResponse(r)),
                    fetch('/api/overrides', { credentials: 'include' }).then(r => handleAuthResponse(r)),
                    fetch('/api/cleared', { credentials: 'include' }).then(r => handleAuthResponse(r))
                ]);

                appData = { settings, bills, overrides, cleared };
                renderAllTabs();
            } catch (error) {
                console.error('Load error:', error);
                if (error.message === 'Unauthorized') {
                    showLoginScreen();
                }
            }
        }

        async function handleAuthResponse(response) {
            if (response.status === 401) {
                throw new Error('Unauthorized');
            }
            if (!response.ok) {
                throw new Error('Request failed');
            }
            return response.json();
        }

        function renderAllTabs() {
            renderBudgetTab();
            renderForecastTab();
            renderBillsTab();
            renderSettingsTab();
        }

