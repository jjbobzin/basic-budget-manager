        }

        // ========== FORECAST TAB ========== 
        function renderForecastTab() {
            const s = appData.settings;
            if (!s) return;

            const months = [];
            const today = new Date();
            
            for (let i = 0; i < 12; i++) {
                const date = new Date(today.getFullYear(), today.getMonth() + i, 1);
                months.push({
                    date,
                    name: date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' }),
                    transactions: calculateMonthTransactions(date, s)
                });
            }

            document.getElementById('forecastContent').innerHTML = months.map(month => {
                let html = `<div class="balance-month"><h3>${month.name}</h3>`;
                let balance = month.transactions[0].balance;

                month.transactions.forEach(txn => {
                    const isCleared = appData.cleared.some(c => c.transaction_key === txn.key);
                    balance = txn.balance;
                    
                    html += `
                        <div class="balance-row ${isCleared ? 'cleared' : ''}" onclick="toggleCleared('${txn.key}')">
                            <span>${txn.description}</span>
                            <span class="balance-amount ${balance < 0 ? 'negative' : 'positive'}">$${balance.toFixed(2)}</span>
                        </div>
                    `;
                });

                html += '</div>';
                return html;
            }).join('');
        }

        function calculateMonthTransactions(date, settings) {
            const transactions = [];
            let balance = settings.starting_balance;

            const year = date.getFullYear();
            const month = date.getMonth();
            const daysInMonth = new Date(year, month + 1, 0).getDate();

            transactions.push({
                key: `${year}-${month}-start`,
                description: 'Starting Balance',
                balance
            });

            // Add paychecks
            [settings.payroll_day_1, settings.payroll_day_2].forEach((day, idx) => {
                if (day <= daysInMonth) {
                    balance += settings.income_per_paycheck;
                    transactions.push({
                        key: `${year}-${month}-paycheck-${idx}`,
                        description: `üí∞ Paycheck (Day ${day})`,
                        balance
                    });
                    
                    // Deposits
                    balance -= settings.bills_account_deposit;
                    transactions.push({
                        key: `${year}-${month}-bills-deposit-${idx}`,
                        description: `üì§ ${settings.bills_account_name}`,
                        balance
                    });
                    
                    balance -= settings.personal_account_deposit;
                    transactions.push({
                        key: `${year}-${month}-personal-deposit-${idx}`,
                        description: `üì§ ${settings.personal_account_name}`,
                        balance
                    });
                    
                    balance -= settings.savings_account_1_deposit;
                    transactions.push({
                        key: `${year}-${month}-savings-deposit-${idx}`,
                        description: `üì§ ${settings.savings_account_1_name}`,
                        balance
                    });
                }
            });

            // Add bills
            appData.bills.forEach(bill => {
                if (shouldBillOccurInMonth(bill, year, month)) {
                    const override = appData.overrides.find(o => 
                        o.bill_id === bill.id && o.year === year && o.month === month
                    );
                    const amount = override ? override.amount : bill.base_amount;
                    
                    balance -= amount;
                    transactions.push({
                        key: `${year}-${month}-bill-${bill.id}`,
                        description: `üí≥ ${bill.name}`,
                        balance
                    });
                }
            });

            return transactions;
        }

        function shouldBillOccurInMonth(bill, year, month) {
            const months = getFrequencyMonths(bill.frequency);
            const monthsSinceStart = (year - 2024) * 12 + month;
            return monthsSinceStart % months === 0;
        }

        function getFrequencyMonths(frequency) {
            const map = { monthly: 1, quarterly: 3, 'semi-annual': 6, annual: 12 };
            return map[frequency] || 1;
        }

        async function toggleCleared(key) {
            try {
                await fetch('/api/cleared/toggle', {
                    method: 'POST',
                    credentials: 'include',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ transaction_key: key })
                });
                await loadAppData();
            } catch (error) {
                console.error('Toggle cleared error:', error);
            }
        }

        // ========== BILLS TAB ========== 
        function renderBillsTab() {
            const tbody = document.getElementById('billsTableBody');
